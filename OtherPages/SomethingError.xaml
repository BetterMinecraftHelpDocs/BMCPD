<local:MyCard Title="服务器.exe未响应">
    <StackPanel Margin="25,30,25,30">
        <TextBlock Margin="0,0,0,4" Foreground="Red"
                   Text="- 404 -" FontSize="50" TextAlignment = "Center" FontWeight="Bold"/>
        <TextBlock Margin="0,0,0,4" Foreground="Red" FontSize="16"
                   Text="Not Found" TextAlignment = "Center"/>           
